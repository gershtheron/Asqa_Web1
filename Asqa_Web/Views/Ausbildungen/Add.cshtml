@model Asqa_Web.Models.AddAusbildungenViewModel
@{
    ViewData["Title"] = "Add Ausbildung";
}

<h1>Add Ausbildung</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div> <!-- Add this line to display all validation errors -->

    <div class="mt-3">
        <label class="form-label">Ausbildung Name</label>
        <input type="text" class="form-control" asp-for="Ausb_name" />
        <span asp-validation-for="Ausb_name" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Ausbildungs Jahr</label>
        <input type="date" class="form-control" asp-for="Ausb_jahr" />
        <span asp-validation-for="Ausb_jahr" class="text-danger"></span>
    </div>

  

    <div class="mt-3">
        <label class="form-label">Ausbildungs Institut</label>
        <input type="text" class="form-control" asp-for="Ausb_institut" />
        <span asp-validation-for="Ausb_institut" class="text-danger"></span>
    </div>


    <div class="mt-3">
        <button type="submit" class="btn btn-primary">SAVE</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @if (TempData["DuplicateEntry"] != null)
    {
        <script>
            alert("Ausbildung already exists.");
            document.getElementById('ausbildungForm').reset();
        </script>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            document.getElementById('ausbildungForm').reset();
        </script>
    }
}