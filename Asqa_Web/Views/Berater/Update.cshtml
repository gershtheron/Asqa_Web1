@model Asqa_Web.Models.UpdateBeraterViewModel

<h1>Update Berater</h1>

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Ma_Nachname" class="control-label">Nachname</label>
        <input asp-for="Ma_Nachname" class="form-control" />
        <span asp-validation-for="Ma_Nachname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ma_Vorname" class="control-label">Vorname</label>
        <input asp-for="Ma_Vorname" class="form-control" />
        <span asp-validation-for="Ma_Vorname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ma_Gebjahr" class="control-label">Gebjahr</label>
        <input asp-for="Ma_Gebjahr" class="form-control" />
        <span asp-validation-for="Ma_Gebjahr" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ma_FirmaRolle" class="control-label">Firma Rolle</label>
        <input asp-for="Ma_FirmaRolle" class="form-control" />
        <span asp-validation-for="Ma_FirmaRolle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ma_Image" class="control-label">Image</label>
        <input type="file" asp-for="Ma_Image" class="form-control" />
        <span asp-validation-for="Ma_Image" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.Ma_ImagePath))
    {
        <div class="form-group">
            <img src="~/images/@Model.Ma_ImagePath" alt="Berater Image" style="max-width: 200px;" />
        </div>
    }

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}