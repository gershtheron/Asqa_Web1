@model Asqa_Web.Models.AddMa_ProjektViewModel

@{
    ViewData["Title"] = "Create Ma_Projekt";
    var today = DateTime.Today.ToString("yyyy-MM-dd");

}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Ma_id" class="control-label">Mitarbeiter</label>
        <select asp-for="Ma_id" class="form-control" asp-items="ViewBag.MitarbeiterList"></select>
    </div>
    <div class="form-group">
        <label asp-for="Proj_id" class="control-label">Projekt</label>
        <select asp-for="Proj_id" class="form-control" asp-items="ViewBag.ProjektList"></select>
    </div>
    <div class="form-group">
        <label asp-for="RolleId" class="control-label">Rolle</label>
        <select asp-for="RolleId" class="form-control" asp-items="ViewBag.RolleList"></select>
    </div>
    <div class="form-group">
        <label asp-for="Start_date" class="control-label">Start Date</label> 
        <input asp-for="Start_date" class="form-control" type="date" value="@today" />
    </div>
    <div class="form-group">
        <label asp-for="End_date" class="control-label">End Date</label>
        <input asp-for="End_date" class="form-control" type="date" value="@today" />
    </div>
    <div class="form-group">
        <label asp-for="Taetigkeiten" class="control-label">Taetigkeiten</label>
        <select asp-for="Taetigkeiten" class="form-control" asp-items="ViewBag.TaetigkeitenList"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

