@{
}
@model Asqa_Web.Models.Entities.Mitarbeiter

<h1>Delete Mitarbeiter</h1>

<h3>Are you sure you want to delete this Mitarbeiter?</h3>
<div>
    <h4>Mitarbeiter</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nachname
        </dt>
        <dd class="col-sm-10">
            @Model.Ma_Nachname
        </dd>
        <dt class="col-sm-2">
            Vorname
        </dt>
        <dd class="col-sm-10">
            @Model.Ma_Vorname
        </dd>
        <dt class="col-sm-2">
            Gebjahr
        </dt>
        <dd class="col-sm-10">
            @Model.Ma_Gebjahr
        </dd>
        <dt class="col-sm-2">
            Firma Rolle
        </dt>
        <dd class="col-sm-10">
            @Model.Ma_FirmaRolle
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Select" class="btn btn-secondary">Cancel</a>
    </form>
</div>