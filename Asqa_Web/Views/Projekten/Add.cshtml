@model Asqa_Web.Models.AddProjektenView

@{
    ViewData["Title"] = "Add Projekt";
}

<h1> Add Projekt</h1>



<form method="post" id="projektenForm">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mt-3">
        <label class="form-label">Projekt Name</label>
        <input type="text" class="form-control" asp-for="Proj_Name" />
        <span asp-validation-for="Proj_Name" class="text-danger"></span>

    </div>





    <div class="mt-3">
        <button type="submit" class="btn btn-primary">SAVE</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (TempData["DuplicateEntry"] != null)
    {
        <script>
            alert("Projekt already exists.");
            document.getElementById('projektenForm').reset();
        </script>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            document.getElementById('projektenForm').reset();
        </script>
    }
}