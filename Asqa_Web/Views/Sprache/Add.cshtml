@model Asqa_Web.Models.AddSpracheViewModel

@{
    ViewData["Title"] = "Add Sprache";
}

<h1> Add Sprache</h1>



<form method="post" id="sprachenForm">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mt-3">
        <label class="form-label">Sprache Name</label>
        <input type="text" class="form-control" asp-for="Sprache_name" />
        <span asp-validation-for="Sprache_name" class="text-danger"></span>

    </div>





    <div class="mt-3">
        <button type="submit" class="btn btn-primary">SAVE</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (TempData["DuplicateEntry"] != null)
    {
        <script>
            alert("Sprache already exists!");
            document.getElementById('spracheForm').reset();
        </script>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            alert("@TempData["SuccessMessage"]");  // Display success message as alert
            document.getElementById('spracheForm').reset();
        </script>
    }
}