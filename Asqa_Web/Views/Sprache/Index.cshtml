@{
}
@model IEnumerable<Asqa_Web.Models.SpracheViewModel>

@{
    ViewData["Title"] = "Sprache List";
}

<h2>Sprachen</h2>

<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Add", "Sprache")'">Add New Sprache</button>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sprache_name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sprache_name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>