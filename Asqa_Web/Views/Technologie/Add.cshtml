@{
}
@model Asqa_Web.Models.AddTechnologieViewModel
@{
    ViewData["Title"] = "Add Technologie";
}

<h1> Add Technologie</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}


<form method="post" id="technologieForm">
    <div asp-validation-summary="All" class="text-danger"></div> <!-- Add this line to display all validation errors -->

    <div class="mt-3">
        <label class="form-label">Technologie Name</label>
        <input type="text" class="form-control" asp-for="Tech_name" />
        <span asp-validation-for="Tech_name" class="text-danger"></span>

    </div>



    <div class="mt-3">
        <button type="submit" class="btn btn-primary">SAVE</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (TempData["DuplicateEntry"] != null)
    {
        <script>
            alert("Tech already exists.");
            document.getElementById('technologieForm').reset();
        </script>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            document.getElementById('technologieForm').reset();
        </script>
    }
}